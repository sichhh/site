<%= form_with model: [ @article, @comment ] do |form| %>
  
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
<p>
  <%= form.label :status %><br>
  <%= form.select :status, Visible::VALID_STATUSES, selected: 'public' %>
</p>
<p>
    <%= form.submit "Save", class: "btn btn-primary" %>
  </p>
<% end %>
