<%= form_with model: [@article, @comment] do |form| %>
  <div class="form-group">
    <%= form.label :body, "Комментарий" %><br>
    <%= form.text_area :body, class: 'form-control' %><br>
    <% @comment.errors.full_messages_for(:body).each do |message| %>
      <div class="alert alert-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :status, "Статус" %><br>
    <%= form.select :status, Visible::VALID_STATUSES, { selected: 'public' }, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
