<h1 class="mb-4">Articles</h1>

<% if current_user %>
  <%= link_to 'New Article', new_article_path, class: 'btn btn-primary btn-lg' %>
<% end %>

<% @articles.each do |article| %>
  <% unless article.archived? %>
    <article class="card mt-3">
      <div class="card-body">
        <h4><%= link_to article.title, article_path(article) %></h4>

        <section class="card-text">
          <time datetime="<%= article.created_at.iso8601 %>">
            <small><%= article.created_at.strftime('%B %d, %Y') %></small>
          </time>
        </section>

        <% if user_signed_in? && current_user == article.user %>
          <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-secondary' %>
        <% end %>
      </div>
    </article>
  <% end %>
<% end %>
